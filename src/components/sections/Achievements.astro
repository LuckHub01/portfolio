---
import { getAchievements } from '../../utils/data';

const achievements = getAchievements();
---

<section id="achievements" class="py-20">
  <div class="container mx-auto px-4 md:px-6">
    <h2 class="text-3xl font-bold text-center mb-12 text-gray-900 dark:text-white">
      Mes <span class="text-primary-600 dark:text-primary-400">r√©alisations</span>
    </h2>
    
    <div class="max-w-3xl mx-auto">
      <div class="relative">
        <!-- Timeline Line -->
        <div class="absolute left-0 md:left-1/2 top-0 h-full w-1 bg-primary-200 dark:bg-primary-900 transform md:-translate-x-1/2"></div>
        
        <!-- Achievement Items -->
        {achievements.map((achievement, index) => (
          <div class={`relative z-10 mb-12 ${index % 2 === 0 ? 'md:pr-12 md:text-right md:ml-auto md:mr-0' : 'md:pl-12 md:ml-0 md:mr-auto'} md:w-1/2 ml-8 md:ml-0`}>
            <!-- Timeline Dot -->
            <div class="absolute left-0 md:left-1/2 top-0 w-5 h-5 rounded-full bg-primary-500 dark:bg-primary-400 transform -translate-x-1/2 -translate-y-1/2 border-4 border-white dark:border-gray-900 shadow-md"></div>
            
            <div class="bg-white dark:bg-gray-900 p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
              <span class="inline-block mb-2 text-sm text-gray-600 dark:text-gray-400">{achievement.date}</span>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">{achievement.title}</h3>
              <p class="text-gray-700 dark:text-gray-300">{achievement.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>